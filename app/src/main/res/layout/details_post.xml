<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/post_comment_body"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/post_comment_image"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="113dp"
            android:text="Body"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/post_comment_email"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/post_comment_name"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="56dp"
            android:text="Email"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/post_comment_name"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/post_comment_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="1dp"
            android:text="Name"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/post_comment_image"
            android:layout_width="72dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            tools:srcCompat="@tools:sample/avatars" />

    </RelativeLayout>
</LinearLayout>